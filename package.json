{
  "name": "tree-sitter-sql",
  "version": "0.1.0",
  "description": "SQL grammar fom tree-sitter",
  "main": "bindings/node",
  "scripts": {
    "install": "node-gyp-build",
    "build": "npm run gen && node-gyp rebuild",
    "build-compile-commands": "bear --append -- node-gyp build",
    "prebuild": "npm run prebuild:linux && npm run prebuild:win32 && npm run prebuild:macos",
    "prebuild:linux": "prebuildify --napi -t node@14.7.0 -t electron@13.5.2 --strip --platform linux --arch x64+arm64",
    "prebuild:win32": "prebuildify --napi -t node@14.7.0 -t electron@13.5.2 --strip --platform win32 --arch x64+arm64",
    "prebuild:macos": "prebuildify --napi -t node@14.7.0 -t electron@13.5.2 --strip --platform darwin --arch x64+arm64",
    "prebuild-debug": "prebuildify --napi -t electron@13.5.2 -t node@14.7.0 --debug",
    "test": "tree-sitter generate && tree-sitter test",
    "gen": "tree-sitter generate",
    "hl": "tree-sitter highlight",
    "parse": "tree-sitter parse",
    "prettier": "prettier --write .",
    "build-wasm": "tree-sitter build-wasm",
    "update-playground": "tree-sitter build-wasm && mv tree-sitter-sql.wasm docs/",
    "extract-error": "node ./scripts/extract_error.js"
  },
  "keywords": [
    "parser",
    "lexer",
    "sql"
  ],
  "repository": "https://github.com/m-novikov/tree-sitter-sql",
  "author": "Maksim Novikov <mnovikov.work@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "node-gyp-build": "^4.3.0"
  },
  "devDependencies": {
    "node-addon-api": "^4.3.0",
    "node-gyp": "^8.4.1",
    "prebuildify": "^5.0.0",
    "prettier": "^2.4.1",
    "tree-sitter-cli": "^0.20.0"
  },
  "tree-sitter": [
    {
      "scope": "source.sql",
      "file-types": [
        "sql"
      ]
    }
  ]
}
